//- timer Timer object
//- type types of Timers (countdown-modern, countdown-inline, countdown-ellipse)
mixin post-vacation(vacationLink, title, vacationMeta)
  // Vacation
  a(href= vacationLink).post-vacation.text-left
    div
      h3.font-default= title
    .post-meta.offset-top-10
      ul.list-inline.list-inline-sm.p
        each vacation in vacationMeta
          li
            case vacation.type
              when "location"
                span.icon.text-middle.icon-xxs.mdi.mdi-map-marker
                = ' '
                span.text-middle.font-default.small.text-dark= vacation.text
              when "work-time"
                span.icon.text-middle.icon-xxs.mdi.mdi-clock
                = ' '
                span.text-middle.font-default.small.text-dark= vacation.text
              when "date"
                span.icon.text-middle.icon-xxs.mdi.mdi-calendar
                = ' '
                time.text-middle.font-default.small.text-dark(datetime='2016-01-01')= vacation.text