      .shell-wide.section-66
        +isotope(['All', 'Breakfasts', 'Lunches', 'Dinners', 'Desserts', 'Drinks'],{
          "group": "menu",
          "layout": "fitRows",
          "alignClass": "isotope-filters-horizontal"
        }, "isotope-1")
          .row
            .col-xs-12.col-md-4.isotope-item(data-filter='Breakfasts')
              .inset-md-right-20
                +box-pricing-type-1([{
                  "title": "Old Timer's Breakfast",
                  "price": "$22.00",
                  "desc": "Two eggs cooked to order with grits, sawmill gravy, homemade buttermilk biscuits & real butter "
                },
