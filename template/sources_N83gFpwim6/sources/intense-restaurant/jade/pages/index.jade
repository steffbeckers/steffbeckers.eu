extends  ../_skeleton

include ../elements/_ui-media-elements
include ../elements/_ui-rd-parallax
include ../elements/_ui-isotope
include ../elements/_ui-box-pricing-type-1
include ../elements/_ui-thumbnail-classic
include ../elements/_ui-post-event

//-Title
block title
  title= cfg.brand.name

//- Page
block page

  // Page Head
  header.page-head.slider-menu-position
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-transparent',
    {
      "data-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.home,
    cfg.nav
    )

  // Page Contents
  main.page-content
    //Section Intro
    section.context-dark
      .rd-parallax(data-on="false" data-md-on="true")
        .rd-parallax-layer(data-speed="0.45", data-type="media", data-url="images/intro-01-1920x955.jpg")
        .rd-parallax-layer(data-speed="0.3", data-type='html' data-fade="true")
          .shell
            .section-110.section-cover.range.range-xs-center.range-xs-middle
              .cell-md-8
                img(src='images/intro-logo-175x173.png' alt="" width=175 height=173)

                h1.font-accent
                  span.big Intense Restaurant

                .group
                  .group-item.reveal-block
                    span.icon.icon-xxs.mdi.mdi-navigation.text-middle
                    = " "
                    span.text-middle 4578 Marmora Road, Glasgow D04 89GR
                  .group-item
                    span.icon.icon-xxs.mdi.mdi-clock.text-middle
                    = " "
                    span.text-middle 10:00 am - 11:00 pm
                  .group-item
                    span.icon.icon-xxs.mdi.mdi-phone.text-middle
                    = " "
                    span.text-middle 800 23456789

                p.offset-top-24.big.veil.reveal-sm-block We introduce new cultures to visitors through cuisines of various countries, offering a special dish for everyone regardless of their food preferences.

                .group.offset-top-50
                  a(href="#" data-custom-scroll-to="reserve-now").btn.btn-lg.btn-primary Make a reservation

    // Section Welcome
    section.section-98.section-md-110
      .shell
        .range.text-lg-left
          .cell-sm-preffix-2.cell-sm-8.cell-lg-preffix-0.cell-lg-6.cell-lg-push-6
            .shadow-drop-xl
              +media-elements({
                "type": "video",
                "href": "https://www.youtube.com/embed/MG6jHxAfwQk",
                "ratio": "16by9"
              })

          .cell-sm-preffix-2.cell-sm-8.cell-lg-preffix-0.cell-lg-6.cell-lg-pull-6.offset-top-30.offset-lg-top-0
            .inset-lg-right-20
              h1
                span.reveal-block.font-accent.big Welcome
                span.reveal-block.offset-top-4.h3.text-light.text-uppercase To Our Restaurant
              hr.divider.hr-lg-left-0.bg-mantis.offset-top-30
              p Would you like to savor the exquisite cuisine and bring the art of dining to a new level? We obtain the freshest products from reputable purveyors and incorporate them into our exclusive dishes. Our menus are influenced by culinary traditions of Europe, Far East and other parts of the world. We are open to experiments and often add new dishes to our a la carte menu. Our courteous and attentive waiters in smoking jackets will bring you anything you wish.

    //Section Our Menu
    section
      .context-dark
        +rd-parallax({
          "backgroundSpeed": "0.35",
          "attrType": "media",
          "src": "images/image-01-1920x963.jpg",
          "htmlSpeed": "0"
        })
