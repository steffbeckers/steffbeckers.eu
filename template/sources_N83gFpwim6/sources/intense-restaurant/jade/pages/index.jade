              })

    // Section Gallery
    section.bg-gray-darkest
      .context-dark
        +rd-parallax({
          "backgroundSpeed": "0.35",
          "attrType": "media",
          "src": "images/image-03-1920x1018.jpg",
          "htmlSpeed": "0"
        })
          .shell.section-98.section-110
            h1
              span.reveal-block.font-accent.big Upcoming Events
              span.reveal-block.offset-top-4.h3.text-light.text-uppercase Join us for something special
            hr.divider.bg-mantis.offset-top-30

            .range.offset-top-66
              .cell-md-8.cell-lg-6
                .inset-lg-right-20
                  +post-event(cfg.nav.events.submenu.singleEvent.href, "March 8 2016", "8:00 AM", "Event Image Post example",
                  {
                    "type": "thumbnail",
                    "thumb": {"src": "images/post-01-553x320.jpg", "width": 553, "height": 320, "alt": ""},
                    "target": {"href": cfg.nav.events.submenu.singleEvent.href}
                  })
                    p Celebrate this year's Lovers Day by visiting our cozy, romantic Restaurant! Each year we are introducing some themed party for this occasion... This time the Valentine's Day will be set amid Parisian decor.

                    .group.offset-top-30
                      a(href=cfg.nav.events.submenu.singleEvent.href).btn.btn-sm.btn-primary read More

              .cell-md-8.cell-lg-6.offset-top-41.offset-lg-top-0
                .inset-lg-left-20
                  +post-event(cfg.nav.events.submenu.singleEvent.href, "March 12 2016", "8:00 AM", "Orange, Meaty and Tasty! ")

                  hr.hr.bg-gray-darker

                  +post-event(cfg.nav.events.submenu.singleEvent.href, "March 14 2016", "17:00 AM", "New Restaurant Opens in New York")

                  hr.hr.bg-gray-darker

                  +post-event(cfg.nav.events.submenu.singleEvent.href, "March 18 2016", "18:00 AM", "Perfect Mother's Day Gift")

                  .group.text-right.offset-top-30
                    a(href=cfg.nav.events.href).btn.btn-sm.btn-default see all events

    // Section Reserve Now
    section.bg-gray-darkest.context-dark.section-98.section-110(id="reserve-now")
      .shell
        h1
          span.reveal-block.font-accent.big Reserve Now
          span.reveal-block.offset-top-4.h3.text-light.text-uppercase EVERY GUEST IS SPECIAL HERE
        hr.divider.bg-mantis.offset-top-30

        // RD Mailform
        form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
          .range
            .cell-lg-3
              .form-group.has-feedback
                label.form-label.form-label-sm.form-label-outside(for="form-reserve-name") Name:
                input#form-reserve-name.form-control.input-sm(type="text" data-constraints="@Required" name="name")
                span.form-control-feedback.mdi.mdi-account( aria-hidden="true")

            .cell-lg-3
              .form-group.has-feedback
                label.form-label.form-label-sm.form-label-outside(for="form-reserve-email") E-Mail:
                input#form-reserve-email.form-control.input-sm(type="email" data-constraints="@Required" name="email")
                span.form-control-feedback.mdi.mdi-telegram( aria-hidden="true")

            .cell-lg-2
              .form-group.has-feedback
                label.form-label.form-label-sm.form-label-outside(for="form-reserve-date") Date:
                input#form-reserve-date.form-control.input-sm(type="text" data-constraints="@Required" name="date")
                span.form-control-feedback.mdi.mdi-calendar( aria-hidden="true")

            .cell-lg-2
              .form-group.has-feedback
                label.form-label.form-label-sm.form-label-outside(for="form-reserve-time") Time:
                input#form-reserve-time.form-control.input-sm(type="time" data-constraints="@Required" name="time")
                span.form-control-feedback.mdi.mdi-clock( aria-hidden="true")

            .cell-lg-2
              .form-group
                label.form-label.form-label-sm.form-label-outside(for="form-reserve-persons") Persons:
                select.form-control.input-sm(id="form-reserve-persons" name="persons" data-minimum-results-for-search="Infinity")
                  option(value="1") 1
                  option(value="2") 2
                  option(value="3") 3
                  option(value="4") 4


          .group.offset-top-20.text-center.offset-top-50
            button(type="submit" style="padding-left: 30px; padding-right: 30px;").btn.btn-primary Make a reservation

