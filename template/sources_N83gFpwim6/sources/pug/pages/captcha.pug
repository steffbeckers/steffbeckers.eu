extends  ../_skeleton

//- Includes
include ../elements/_ui-rd-navbar-default-transparent
include ../elements/_ui-isotope

//-Title
block title
  title= cfg.nav.features.submenu.reCaptcha.title

//- Page
block page
  // Page Head
  header.page-head.slider-menu-position
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-transparent',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logoInverse,
    cfg.nav.features,
    cfg.nav
    )
  // Page Content
  main.page-content
    include ../sections/_section-integration-with-captcha
    include ../sections/_section-captcha-in-action

  // Page Footer
  include ../sections/_section-footer-default