          each col in [1, 2, 3, 4, 5]
            .cell-md-1-5
              +grid-col('.cell-md-1-5')
        .range.range-sm
          each col in [1, 2, 3, 4]
            .cell-md-3
              +grid-col('.cell-md-3')
        .range.range-sm
          each col in [1, 2, 3]
            .cell-md-4
