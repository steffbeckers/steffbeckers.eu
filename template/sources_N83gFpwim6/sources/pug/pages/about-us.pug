extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic

//-Title
block title
  title= cfg.nav.pages.submenu.aboutUs.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default(
    'rd-navbar-default rd-navbar-light',
    {
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-fixed',
      "data-lg-layout": 'rd-navbar-static',
      "data-lg-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.pages,
    cfg.nav
    )

  +breadcrumb-classic(
  cfg.nav.pages.submenu.aboutUs.title,
  "icon-lg " + cfg.nav.pages.submenu.aboutUs.icon,
  {
    0: {
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "title": cfg.nav.pages.title,
      "href": cfg.nav.pages.href
    },
    2: {
      "title": cfg.nav.pages.submenu.aboutUs.title,
      "href": cfg.nav.pages.submenu.aboutUs.href
    }
  })

  // Page Content
  main.page-content

    include ../sections/_section-who-we-are
    include ../sections/_section-our-skills
    include ../sections/_section-why-choose-us
    include ../sections/_section-clients-comments

  // Page Footers
  include ../sections/_section-footer-default