//- Include
include ../elements/_ui-rd-twitter

// See It In Action
section(id="twitter-widget")
  +rd-parallax({
    "backgroundSpeed": "0.35",
    "attrType": "media",
    "src": "images/backgrounds/background-07-1920x1998.jpg",
    "htmlSpeed": "0"
  })
    .shell-wide.section-98.section-sm-110
      h1 See It In Action
      hr.divider.bg-mantis
      .range.offset-top-66.range-sm-center.text-sm-left
        .cell-sm-8.cell-lg-12
          +rd-twitter({
            "dataBoxTwitterUserName": "templatemonster",
            "dataBoxTwitterDateFormat": "%d %b %Y",
            "dataBoxTwitterDateHoursr": " hours ago",
            "dataBoxTwitterDateMinutes": " minutes ago"
          })
            .range.range-sm-center
              .cell-lg-4
                a.rd-twitter.shadow-drop-sm(data-twitter-type='tweet', href='#')
