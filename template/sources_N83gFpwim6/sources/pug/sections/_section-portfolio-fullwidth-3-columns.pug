// Portfolio fullwidth 3 columns
section.section-top-98.section-sm-top-110
  .offset-top-50
    +isotope(['All', 'Design', 'Development', 'Marketing'],{
      "group": "gallery",
      "layout": "fitRows",
      "alignClass": "isotope-filters-horizontal"
    }, "isotope-1")
