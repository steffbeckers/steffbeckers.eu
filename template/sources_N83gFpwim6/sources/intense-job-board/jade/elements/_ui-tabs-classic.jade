//- nameList - array of tabs list
mixin tabs-classic(nameList, tabsGroup)
  // Responsive-tabs
  .responsive-tabs.responsive-tabs-classic(data-type="horizontal")
    ul.resp-tabs-list.tabs-1.text-center(data-group= tabsGroup || "tabs-group-default", class= tabsGroup || "tabs-group-default")
      each item in nameList
        li= item
    .resp-tabs-container.text-left(data-group= tabsGroup || "tabs-group-default", class= tabsGroup || "tabs-group-default")
      block
