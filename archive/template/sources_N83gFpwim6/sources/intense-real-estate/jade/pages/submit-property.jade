          h5.text-bold.offset-top-66 Additional Details
          .additional-fields(data-init-count="1"  data-additional-field='<div class="submit-property-detail offset-top-41 offset-sm-top-20"><div class="row"><div class="col-xs-10 col-sm-11"><div class="range range-xs-middle"><div class="cell-sm-5"><div class="form-group"><label for="form-property-detail-title-$num$" class="form-label form-label-size-lg form-label-outside"> Title </label><input id="form-property-detail-title-$num$" type="text" name="propery_detail_title_$num$" data-constraints="@Required" class="form-control bg-white"></div></div><div class="cell-sm-7"><div class="form-group"><label for="form-property-detail-value-1" class="form-label form-label-size-lg form-label-outside"> Value </label><input id="form-property-detail-value-1" type="text" name="propery_detail_value_1" data-constraints="@Required" class="form-control bg-white"></div></div></div></div><div class="col-xs-2 col-sm-1 text-center offset-top-14 offset-sm-top-10"><a href="#" class="additional-field-remove icon icon-xxs mdi mdi-close text-dark offset-top-41"></a></div></div></div>')
            .additional-fields-wrap
            .range.offset-top-34
              .cell-md-2.cell-xs-4
                button.additional-fields-add.btn.btn-default.btn-block Add detail
          hr.bg-lighter
          .range
            .cell-md-3.cell-xs-6
              button(type="submit").btn.btn-primary.btn-block submit

  // Page Footer
  include ../sections/_section-footer-default
