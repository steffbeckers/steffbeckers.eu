extends  ../_skeleton

block variables
  - var activeIndex = 0
  - var pageName = 'Coming soon'
  - var bodyClass = 'one-screen-page'

block title
  title=pageName

block menu
  include ../sections/_menu-perspective

block header
  include ../sections/_header-default

block page
