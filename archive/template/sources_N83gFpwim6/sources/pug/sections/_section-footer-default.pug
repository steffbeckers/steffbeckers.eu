            +widget-list-social([
              {
                "icon": "fa fa-facebook",
                "href": "#"
              },
              {
                "icon": "fa fa-twitter",
                "href": "#"
              },
              {
                "icon": "fa fa-google-plus",
                "href": "#"
              },
              {
                "icon": "fa fa-linkedin",
                "href": "#"
              }
            ])

  .shell.offset-top-50
    p.small.text-darker
      | #{cfg.brand.name} &copy; #[span(id="copyright-year")] . #[a(href="privacy.html") Privacy Policy]
      // {%FOOTER_LINK}