extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumb-classic
include ../elements/_ui-box-comment

//- Title
block title
  title= cfg.nav.components.submenu.toolkitComponents.submenu.listsOfComments.title

//- Page
block page
  // Page Header
  header.page-head
    //- RD Navbar
    +rd-navbar-default( 
    'rd-navbar-default rd-navbar-light',
    {
      "data-md-auto-height": "true",
      "data-lg-auto-height": "true",
      "data-md-layout": 'rd-navbar-static',
      "data-md-stick-up": 'true'
    },
    cfg.brand.logo,
    cfg.nav.components,
    cfg.nav
    )

  +breadcrumb-classic(
  cfg.nav.components.submenu.toolkitComponents.submenu.listsOfComments.title,
  cfg.nav.components.submenu.toolkitComponents.submenu.listsOfComments.icon,
  {
    0: {
      "title": cfg.nav.home.title,
      "href": cfg.nav.home.href
    },
    1: {
      "title": cfg.nav.components.title,
      "href": cfg.nav.components.href
    },
    2: {
      "title": cfg.nav.components.submenu.toolkitComponents.submenu.listsOfComments.title,
      "href": cfg.nav.components.submenu.toolkitComponents.submenu.listsOfComments.href
    }
  })

  // Page Content
  main.page-content.section-98.section-sm-124
    .shell
      .range.range-xs-center
        .cell-xs-10.cell-sm-8.cell-md-6

          // Section classic comments
          section
            h1 Classic Comments
            hr.divider.bg-mantis
            .offset-top-41
