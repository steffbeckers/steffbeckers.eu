extends  ../_skeleton

//-Title
block title
  title How gadgets can benefit your lifestyle.

block search-meta
  meta(name="keywords" content="Lifestyle, Story")
  meta(name="date" content="Dec 20")

//- Page
block page
  // Page Head
  header.page-head
    //- RD Navbar
    +rd-navbar-sidebar-fixed(
    'rd-navbar-light rd-navbar-sidebar-fixed',
    {
      "data-lg-auto-height": "false",
      "data-lg-stick-up": 'false',
      "data-lg-hover-on": "false",
      "data-body-class": "body-inset-left"
    },
    cfg.brand.logo,
    cfg.nav.blogArchive.submenu.singlePost,
    cfg.nav
    )

  // Page Content
  main.page-content

    include ../sections/_section-blog-archive-single

  // Page Footers
  include ../sections/_section-footer-variant-3