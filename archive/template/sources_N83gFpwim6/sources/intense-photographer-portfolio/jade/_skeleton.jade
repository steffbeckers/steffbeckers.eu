- var fonts = "//fonts.googleapis.com/css?family=Questrial%7CPlayfair+Display:400,700%7CLato:400,300"
- var html_class = "wide wow-animation smoothscroll scrollTo"
- var buy_intense = "#qweqwe"

include _config
include elements/_ui-rd-navbar-sidebar-toggle
include mixins/_gallery-photoswipe

block variables

doctype html

html(lang="en" class="#{html_class}")
  head
    // Site Title
    block title
      title Home

    meta(charset="utf-8")
    meta(name="format-detection" content="telephone=no")
    meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge")
    block search-meta
      meta(name="keywords" content="Intense Photographer")
      meta(name="date" content="May 25")


    link(rel="icon" href="images/favicon.ico" type="image/x-icon")

    // Stylesheets
    link(rel="stylesheet" type="text/css" href="#{fonts}")
    link(rel="stylesheet" href="css/style.css")

    = "\n\t\t"
    <!--[if lt IE 10]>
    div(style='background: #212121; padding: 10px 0; box-shadow: 3px 3px 5px 0 rgba(0,0,0,.3); clear: both; text-align:center; position: relative; z-index:1;')
