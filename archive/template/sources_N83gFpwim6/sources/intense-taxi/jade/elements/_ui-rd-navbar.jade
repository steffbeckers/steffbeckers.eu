					mixin navbar-icons(navbarIcons)
						.rd-navbar-collapse-wrap.reveal-md-inline-block
							ul.list-inline.list-inline-0.list-primary
								each icon in navbarIcons
									li.text-center
										a.icon(href= icon.href class= icon.style)

					+navbar-icons([
						{"href": "#", "style": "icon-xxs fa fa-facebook text-white"},
						{"href": "#", "style": "icon-xxs fa fa-google-plus text-white"},
						{"href": "#", "style": "icon-xxs fa fa-linkedin text-white"},
						{"href": "#", "style": "icon-xxs fa fa-twitter text-white"}
					])